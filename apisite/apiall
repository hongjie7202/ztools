#! /bin/bash
#
#   apiall - Upload all 0MQ manuals to api.zero.mq
#   Part of the ztools/apisite toolkit.
#
#   Author: Pieter Hintjens <ph@imatix.com>
#   License: public domain
#
#   syntax: apiall
#
#   Requires these gits be checked out parallel to the ztools git:
#
#   zeromq2 - current master
#   zeromq2-1 - 2.1 release
#   zeromq2-0 - 2.0 release
#
TOOLDIR=`dirname $0`

#   2.2 is in the source git
$TOOLDIR/apione ../../zeromq2 master master

#   2.0 is in its own release git
$TOOLDIR/apione ../../zeromq2-1 v2.1.1  2-1-1
$TOOLDIR/apione ../../zeromq2-1 v2.1.0  2-1-0

#   2.1 is in its own release git
$TOOLDIR/apione ../../zeromq2-0 v2.1.1  2-1-1
$TOOLDIR/apione ../../zeromq2-0 v2.0.10 2-0-10
$TOOLDIR/apione ../../zeromq2-0 v2.0.9  2-0-9
$TOOLDIR/apione ../../zeromq2-0 v2.0.8  2-0-8
$TOOLDIR/apione ../../zeromq2-0 v2.0.7  2-0-7
$TOOLDIR/apione ../../zeromq2-0 v2.0.6  2-0-6
